  "scripts": {
    "run_only_on_first_use": "npm run install_nrm_use_taobao && npm run install_ncu",
    "default": "npm run build",
    "build": "npm i && npm run build_npm && npm run build_composer",
    "build_npm": "npm i && npm run gulp_static",
    "build_composer": "npm run composer_install",
    "watch": "npm run watch_change",
    "lint": "npm run lint_tools_static_src/js",
    "lint_tools_static_src/js": "npx eslint tools_static_src/js",
    "copy": "gulp add_footer copy",
    "gulp_static": "gulp build_static",
    "watch_change": "gulp watch_change",
    "composer_install": "composer i",
    "composer_update": "composer update",
    "install_nrm_use_taobao": "npm i -g nrm --registry=https://registry.npm.taobao.org && nrm use taobao && nrm ls",
    "install_ncu": "npm i -g npm-check-updates"
  },
